<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/spacing_xlarge"
    android:background="@color/white"
    android:layout_marginLeft="@dimen/spacing_left"
    android:layout_marginRight="@dimen/spacing_right"
    android:layout_marginTop="@dimen/spacing_top"
    android:layout_marginBottom="@dimen/spacing_bottom">
    <TextView
        android:id="@+id/gank_item_xiandu_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/color_black"
        tools:text="description"/>

    <TextView
        android:id="@+id/gank_item_xiandu_published_at"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/color_black"
        android:layout_marginTop="8dp"
        tools:text="2019-8-8"/>
</LinearLayout>